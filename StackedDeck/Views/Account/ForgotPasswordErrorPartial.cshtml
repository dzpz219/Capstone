@model StackedDeck.Models.ForgotPasswordViewModel

@{
    Layout = "";
    @Scripts.Render("~/bundles/jquery")
}

@using (Ajax.BeginForm("ForgotPasswordPartial", "Account", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ForgotPasswordPartial" }, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Enter your Email.</h4>
    <hr />
    <div class="text-danger">@ViewBag.Error</div>
    <div class="form-group">
        <div class="col-md-10 text-right">
            @Html.ActionLink("Back", "ForgotPassword", "Account", new { @class = "btn btn-primary" })
        </div>
    </div>
}