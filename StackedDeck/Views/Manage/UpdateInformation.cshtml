@model StackedDeck.Models.UpdateInformationViewModel
@{
    ViewBag.Title = "UpdateInformation";
}
<div class="container margin-top-sm">
    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h2>User Management</h2>
        <hr />
        @using (Html.BeginForm("UpdateInformation", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-md-6">
                <div class="form-group">
                    <div class="thumbnail margin-bottom-none col-md-offset-2 col-md-8">
                        <img id="imagePreview" src="@Model.Avatar" alt="" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-7">
                        <span class="btn btn-primary btn-file">Choose File <input type="file" id="uploadedFile" name="Avatar" accept="image/*"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Firstname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Lastname, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Postal, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Postal, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Postal, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Country, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(m => m.Country, new SelectList(Model.CountryList, "Value", "Value"), "Select...", new { @class = "form-control", @id = "CountryDropDown" })
                    </div>
                </div>
                <div class="form-group hidden" id="ProvinceInput">
                    @Html.LabelFor(m => m.Province, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Province, new SelectList(Model.ProvinceList, "Value", "Value"), "Select...", new { @class = "form-control", @id = "ProvinceDropDown" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="btn-group pull-right">
                            @Html.ActionLink("Back", "Index", "Manage", htmlAttributes: new { @class = "btn btn-default" })
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>