@model StackedDeck.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container v-align-sm">
    <h1 class="text-center">REGISTRATION</h1>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal margin-top-sm", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        //@Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="userName" class="col-sm-4 control-label">User Name:</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
            <div class="form-group">
                <label for="password" class="col-sm-4 control-label">Password:</label>
                <div class="col-sm-4">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="passwordConfirm" class="col-sm-4 control-label">Password Confirm:</label>
                <div class="col-sm-4">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-4 control-label">E-Mail:</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
   
            <div class="form-group">
                <label for="recovery2" class="col-sm-4 control-label">Password Recovery Question 1:</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.RecoveryQuestion1, new { @class = "form-control" })
                    <!--
                    <select id="recoveryquestion1" class="form-control">
                        <option value="0">Q1?</option>
                    </select>
                    -->
                </div>
            </div>
            <div class="form-group">
                <label for="answer2" class="col-sm-4 control-label">Answer:</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.RecoveryAnswer1, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group margin-top-sm">
                <div class="col-sm-offset-4 col-sm-4">
                    <button type="reset" class="btn btn-success pull-left">Reset</button>
                    <input type="submit" class="btn btn-success pull-right" value="Register"/>
                </div>
            </div>
    }
</div>
<div class="footer-container">
    <div class="footer">
        <p>Stacked Deck, by <span class="text-muted">Danny Zhang</span>.</p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
